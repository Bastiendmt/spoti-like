{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessFragments": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "style": {
        "noImplicitBoolean": "off",
        "noShoutyConstants": "warn",
        "useBlockStatements": "warn",
        "useShorthandArrayType": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": []
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all"
    }
  }
}
